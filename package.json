{
  "name": "personal-assistant",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:login": "nest start --watch -- --login",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "trustedDependencies": [
    "@prisma/client",
    "@nestjs/core",
    "sharp"
  ],
  "dependencies": {
    "@golevelup/nestjs-discovery": "^4.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@prisma/client": "^5.12.1",
    "@whiskeysockets/baileys": "^6.6.0",
    "dotenv": "^16.4.5",
    "form-data": "^4.0.0",
    "got": "^11",
    "inquirer": "^8.0.0",
    "libphonenumber-js": "^1.10.60",
    "link-preview-js": "^3.0.5",
    "pino": "^8.20.0",
    "pino-pretty": "^11.0.0",
    "qrcode-terminal": "^0.12.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "wa-sticker-formatter": "^4.4.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/prisma(|/.*)$": "<rootDir>/libs/prisma/src/$1",
      "^@app/whatsapp-api(|/.*)$": "<rootDir>/libs/whatsapp-api/src/$1",
      "^@app/whatsapp(|/.*)$": "<rootDir>/libs/whatsapp/src/$1",
      "^@app/whatsapp-action(|/.*)$": "<rootDir>/libs/whatsapp-action/src/$1",
      "^@app/external-module(|/.*)$": "<rootDir>/libs/external-module/src/$1"
    }
  }
}